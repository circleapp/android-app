<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.where2go.where2go">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:name=".App"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".MenuActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/title_activity_game_activiy">
        </activity>

        <activity
            android:name=".GameActivity"
            android:label="@string/title_activity_game_activiy">
        </activity>
        <activity
            android:name=".PlaceActivity"
            android:label="@string/title_activity_place_activiy">
        </activity>
        <activity
            android:name=".ReviewActivity"
            android:label="@string/title_activity_review"></activity>
        <activity
            android:name=".FavsActivity"
            android:label="@string/title_activity_favs"></activity>
    </application>

</manifest>
